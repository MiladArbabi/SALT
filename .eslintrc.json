{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "mocha": true,
        "commonjs": true
    },
    "plugins": [
      "mocha"
    ],
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            2,
            {
              "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": 0
    }
}
